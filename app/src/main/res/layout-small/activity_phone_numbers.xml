<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/phone_number_relative_layout"
        android:layout_marginTop="10dp"
        android:background="@drawable/curved_relative_layout">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/number_editText"
            android:inputType="phone"
            android:maxLines="1"
            android:hint="Enter Phone Number"
            android:textColorHint="@color/colorGreyText"
            android:textColor="@color/colorAccent"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_number_relative_layout"
        android:text="@string/phone_number_guide"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorGreyText"
        android:id="@+id/guide_textView"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/verify_number"
        android:background="@android:color/transparent"
        android:layout_below="@+id/guide_textView"
        android:id="@+id/verify_number_butn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textAppearance="?android:attr/textAppearanceLarge"/>


</RelativeLayout>