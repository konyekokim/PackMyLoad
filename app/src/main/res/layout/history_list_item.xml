<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/curved_relative_layout"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_history_pml_type_text"
        android:textColor="@color/colorAccent"
        android:id="@+id/pml_type_textView"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_pml_date"
        android:id="@+id/pml_type_date_textView"
        android:layout_below="@+id/pml_type_textView"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"/>

</RelativeLayout>
